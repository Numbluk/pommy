<!DOCTYPE html>
<html>
<head>
  <title>Pommy</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'test', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <%= render 'layouts/nav' %>
  </header>
  <main>
    <div id="path_directions">
      <div id="path_icons">
        <span class="path_container">
          <i class="fa fa-chevron-right" aria-hidden="true" data-stage="1">
            <div class="circle" data-stage="1"></div>
            <span class="line" data-stage="2"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-coffee" aria-hidden="true" data-stage="3">
            <div class="circle" data-stage="3"></div>
            <span class="line" data-stage="3"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-chevron-right" aria-hidden="true" data-stage="4">
            <div class="circle" data-stage="4"></div>
            <span class="line" data-stage="4"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-coffee" aria-hidden="true" data-stage="5">
            <div class="circle" data-stage="5"></div>
            <span class="line" data-stage="5"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-chevron-right" aria-hidden="true" data-stage="6">
            <div class="circle" data-stage="6"></div>
            <span class="line" data-stage="6"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-coffee" aria-hidden="true" data-stage="7">
            <div class="circle" data-stage="7"></div>
            <span class="line" data-stage="7"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-chevron-right" aria-hidden="true" data-stage="8">
            <div class="circle" data-stage="8"></div>
            <span class="line" data-stage="8"></span>
          </i>
        </span>

        <span class="path_container">
          <i class="fa fa-smile-o" aria-hidden="true" data-stage="9">
            <div class="circle" data-stage="9"></div>
          </i>
        </span>
      </div>
    </div>

    <%= render 'layouts/messages' %>

    <%= yield %>
  </main>
</body>
</html>
